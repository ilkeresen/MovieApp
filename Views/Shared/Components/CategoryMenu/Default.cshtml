@model IEnumerable<Category>

<div class="list-group">
    <a href="/" class="list-group-item list-group-item-action">
        Tüm Kategoriler
    </a>
    @foreach (var categories in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@categories.Id"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == categories.Id.ToString() ? "active" : "")">
            @categories.Name
        </a>
    }
</div>